<!DOCTYPE html>
<html>
  <head>
    <%- include('./commons/header'); %>
  </head>
  <body class="landing w-screen h-screen p-0 w-0 flex flex-col">
    <nav class="h-16 bg-white flex items-center border-b border-gray-300 px-12">
      <div class="flex-grow flex items-center">
        <img src="/public/images/hexagon.svg" width="48" height="48" />
        <span class="font-semibold text-gray-800 ml-2 text-xl">Dinastry</span>
      </div>
      <div class="flex items-center justify-end">
        <a class="p-4 text-gray-600 font-semibold">About</a>
        <a class="p-4 text-gray-900 font-semibold">Login</a>
      </div>
    </nav>
    <section class="hero flex-grow flex flex-col items-center justify-center">
      <form 
        method="POST"
        class="w-1/3 p-4 bg-white shadow-xl rounded"
      >
        <div class="text-center pb-4 border-b border-gray-300 text-xl font-bold text-gray-600">Login</div>

        <div class="my-4 flex flex-col">
          <label class="text-sm font-bold">username</label>
          <input 
            placeholder="username..." 
            name="username"
            required
            class="bg-white border-gray-400 border p-2 py-1 text-sm font-semibold rounded" 
          />
        </div>

        <div class="my-4 flex flex-col">
          <label class="text-sm font-bold">password</label>
          <input 
            type="password"
            required
            name="password"
            placeholder="password..." 
            class="bg-white border-gray-400 border p-2 py-1 text-sm font-semibold rounded" 
          />
        </div>

        <button
          type="submit"
          class="px-6 py-1 rounded disabled:opacity-50 bg-indigo-800 text-white font-bold"
        >
          Login
        </button>

      </form>
    </section>
    <footer class="h-16 bg-white border-t border-gray-300"></footer>
    <script src="/public/js/base.js"></script>
  </body>
</html>
